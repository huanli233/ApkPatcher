<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.huanli233</groupId>
  <artifactId>apkpatcher</artifactId>
  <name>ApkPatcher</name>
  <version>1.2.2</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>${mainClass}</mainClass>
                </transformer>
              </transformers>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/MANIFEST.MF</exclude>
                    <exclude>META-INF/LICENSE.txt</exclude>
                    <exclude>META-INF/NOTICE.txt</exclude>
                    <exclude>META-INF/LICENSE</exclude>
                    <exclude>META-INF/NOTICE</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>io.github.fvarrui</groupId>
        <artifactId>javapackager</artifactId>
        <version>1.7.2</version>
        <executions>
          <execution>
            <id>bundling</id>
            <phase>package</phase>
            <goals>
              <goal>package</goal>
            </goals>
            <configuration>
              <platform>auto</platform>
              <createZipball>true</createZipball>
              <vmArgs>-XX:+UseZGC -Dfile.encoding=UTF-8</vmArgs>
              <winConfig>
                <generateMsi>false</generateMsi>
                <generateMsm>false</generateMsm>
                <headerType>console</headerType>
              </winConfig>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <name>apkpatcher</name>
          <bundleJre>true</bundleJre>
          <mainClass>${mainClass}</mainClass>
          <generateInstaller>false</generateInstaller>
          <copyDependencies>true</copyDependencies>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <releases />
      <snapshots>
        <updatePolicy>always</updatePolicy>
        <checksumPolicy>fail</checksumPolicy>
      </snapshots>
      <id>ali-maven</id>
      <url>http://maven.aliyun.com/nexus/content/groups/public</url>
    </repository>
    <repository>
      <releases />
      <snapshots>
        <updatePolicy>always</updatePolicy>
        <checksumPolicy>fail</checksumPolicy>
      </snapshots>
      <id>repo.maven.apache.org</id>
      <url>https://repo.maven.apache.org/maven2</url>
    </repository>
    <repository>
      <releases />
      <snapshots>
        <updatePolicy>always</updatePolicy>
        <checksumPolicy>fail</checksumPolicy>
      </snapshots>
      <id>google</id>
      <url>https://dl.google.com/dl/android/maven2/</url>
    </repository>
  </repositories>
  <properties>
    <maven.compiler.target>17</maven.compiler.target>
    <mainClass>com.huanli233.apkpatcher.main.Main</mainClass>
    <maven.compiler.source>17</maven.compiler.source>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>
